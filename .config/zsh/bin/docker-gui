#!/bin/zsh


if (( $+commands[docker] )); then
  function {
    local container_name="portainer"
    local portainer_port="9090"
    local container_id=$(docker ps --filter name=$container_name -a -q)

    if [ -z "$container_id" ]; then
      docker run -d --name $container_name -p $portainer_port:9000 -v /var/run/docker.sock:/var/run/docker.sock portainer/portainer
    else
      docker start $container_name
    fi

    open http://localhost:$portainer_port
  }
fi
